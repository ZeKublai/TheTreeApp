@model IEnumerable<TreeWebApp.Models.Branch>

@{
	ViewBag.Title = "Index";
}

<h2>Branch List</h2>
<p>@Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-success" })</p>
<table id="BranchTable" class="table">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Code)</th>
			<th>@Html.DisplayNameFor(model => model.Name)</th>
			<th>@Html.DisplayNameFor(model => model.Manager)</th>
			<th>@Html.DisplayNameFor(model => model.DateOpened)</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@Html.DisplayFor(modelItem => item.Code)</td>
				<td>@Html.DisplayFor(modelItem => item.Name)</td>
				<td>@Html.DisplayFor(modelItem => item.Manager.FullName)</td>
				<td>@Html.DisplayFor(modelItem => item.FormattedDateOpened)</td>
				<td>
					<div class="btn-group" role="group">
						<a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary" role="button">
							<span class="glyphicon glyphicon-pencil"></span> Edit
						</a>
						<a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" role="button">
							<span class="glyphicon glyphicon-trash"></span> Delete
						</a>
						<a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info" role="button">
							<span class="glyphicon glyphicon-info-sign"></span> Details
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
@section Scripts {
	@Scripts.Render("~/bundles/jquery")
	<script>
		$(document).ready(function () {
			$('#BranchTable').DataTable({
				stateSave: true,
				"language": {
					"emptyTable": "No data found, click on <strong>Add New</strong> button"
				}
			});
		});
	</script>
}